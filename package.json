{
  "name": "talking-tanuki-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Talking Tanuki - AI Japanese Language Learning Platform",
  "scripts": {
    "frontend": "cd frontend && npm start",
    "frontend:ios": "cd frontend && npm run ios",
    "frontend:android": "cd frontend && npm run android",
    "backend": "cd backend && npm run dev",
    "backend:prod": "cd backend && npm start",
    "web": "cd tanuki-web && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../tanuki-web && npm install",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "setup": "echo 'Setting up Talking Tanuki...' && npm run install:all"
  },
  "workspaces": [
    "frontend",
    "backend",
    "tanuki-web"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/talking-tanuki"
  },
  "keywords": [
    "japanese",
    "language-learning",
    "ai",
    "react-native",
    "firebase",
    "openai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
